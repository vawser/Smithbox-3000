        <Option Value="0" Name="None" />
        <Option Value="1" Name="System Effect" />
        <Option Value="2" Name="Head Effect" />
        <Option Value="3" Name="Body Effect (Positive)" />
        <Option Value="4" Name="Body Effect (Negative)" />
        <Option Value="5" Name="Foot Decal Offset" />
        <Option Value="6" Name="Shader Effect" />
    </Enum>
